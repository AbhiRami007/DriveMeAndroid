<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book professional drivers"
        android:textSize="25sp"
        android:textColor="#4CAF50"
        android:layout_below="@id/title"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/subtitle11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" on hourly basis."
        android:textSize="25sp"
        android:textColor="#888888"
        android:layout_below="@id/subtitle1"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200+ people have used"
        android:textSize="25sp"
        android:textColor="#4CAF50"
        android:layout_below="@id/subtitle11"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/subtitle22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driveme services in your Neighbourhood"
        android:textSize="25sp"
        android:textColor="#888888"
        android:layout_below="@id/subtitle2"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/subtitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commute with Safety with Driveme"
        android:textSize="25sp"
        android:textColor="#888888"
        android:layout_below="@id/subtitle22"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with Email"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_below="@id/subtitle3"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:paddingVertical="15dp"
        android:paddingHorizontal="40dp"
        />
    <TextView
        android:id="@+id/signupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Havenâ€™t Registered Yet? Sign Up"
        android:textColor="#888888"
        android:textSize="14sp"
        android:layout_below="@id/loginText"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
