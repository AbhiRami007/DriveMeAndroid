<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F8faec">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success!"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:paddingLeft="20dp"/>

    <ImageView
        android:id="@+id/success_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:src="@drawable/booking_success"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/smalltexttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification Link has been successfully sent to your email address, Please Verify!"
        android:textSize="14sp"
        android:textColor="#888"
        android:layout_below="@id/success_image"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:background="#F8faec"
        android:layout_marginBottom="18dp"
        android:layout_marginHorizontal="20dp"/>

    <Button
        android:id="@+id/check_email_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Email"
        android:layout_below="@id/smalltexttitle"
        android:background="#4CAF50"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:onClick="checkEmail"/>

    <TextView
        android:id="@+id/go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textSize="14sp"
        android:textColor="#888"
        android:layout_below="@id/check_email_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="goBack"/>

</RelativeLayout>
